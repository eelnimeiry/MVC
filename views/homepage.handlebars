<!-- Loop over each object in the discussion array -->
{{#each discussion as |discussion| }}
<div class="row mb-4 discussion">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/discussion/{{discussion.id}}">{{discussion.BlogTitle}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount discussion.BlogTitle}}</span>
      needed!
    </p>
    <p>Created by {{discussion.user.name}} on {{format_date discussion.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{discussion.description}}
    </p>
  </div>
</div>
{{/each}}
